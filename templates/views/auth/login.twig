{% extends "layout.twig" %}

{% block page_content %}
    <section class="py-4 bg-light">
        <div class="container col-md-6 px-4 my-4">
            <div class="text-center mb-5">
                <div class="feature bg-primary bg-gradient text-white rounded-3 mb-3">
                    <i class="fas fa-sign-in-alt fa-sm"></i>
                </div>
                {% block page_title %}<h2 class="fw-bolder">Connexion</h2>{% endblock %}
            </div>
            {% block display_errors %}
                {{ parent() }}
            {% endblock %}
            <form action="{{ form_action }}" method="POST"  class="row g-2 border-bottom">
                <div class="col-12 form-group">
                    <input type="email" id="email" name="email" class="form-control fa-unicode" placeholder="&#xf1d8; Email" required/>
                </div>
                <div class="col-12 form-group">
                    <input type="password" id="password" name="password" class="form-control fa-unicode" placeholder="&#xf084; Mot de passe" required/>
                </div>
                <div class="col-12 form-group">
                    <button type="submit" class="col-12 btn btn-info btn-lg">Se connecter</button>
                    <p class="text-center pt-3"><a href="{{ lost_password }}">Mot de passe oublié ?</a></p>
                </div>
            </form>
            <div class="mt-4">
                <a class="col-12 btn btn-success btn-lg" href="{{ signup_link }}" role="button">Créer un compte</a>
            </div>
        </div>
    </section>
{% endblock page_content %}
